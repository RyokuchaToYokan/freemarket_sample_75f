= render "layouts/header"

.signup-main
  .signup-form
    .signup-form__information
      会員情報
    .signup-form__first
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :ニックネーム 
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "nickname", placeholder: "例）フリマ", class: "lastname"
          = f.email_field :email, autofocus: true, autocomplete: "nickname", placeholder: "例）太郎", class: "firstname"
        .field
          = f.label :メールアドレス 
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autocomplete: "email", placeholder: "@とドメインを含む", class: "text-form"
        .field
          = f.label :パスワード
          = f.label :必須, { class: 'form-require' }
      
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          
          = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上の半角英数字", class: "text-form"
          %p.info-text ※ 英字と数字の両方を含めて設定してください
          = f.check_box :password
          = f.label :パスワードを表示する

        .field
          = f.label :確認用パスワード
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力してください", class: "text-form"
        %h2.identification 本人確認
        %p.confirmation 安心・安全にご利用いただくために、<br/>お客さまの本人情報の登録にご協力ください。<br/>他のお客さまに公開されることはありません。
        .field
          = f.label :お名前（全角）
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autocomplete: "name", placeholder: "例)　山田", class: "lastname"
          = f.email_field :email, autocomplete: "name", placeholder: "例)　太郎", class: "firstname"
        .field
          = f.label :お名前かな（全角）
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autocomplete: "name", placeholder: "例)　やまだ", class: "lastname"
          = f.email_field :email, autocomplete: "name", placeholder: "例)　たろう", class: "firstname"
        .field
          = f.label :生年月日
          = f.label :必須, { class: 'form-require' }
          %br/
          .field__birthday
            = f.select :email,[['--', 1], ['1900', 2]] ,{ class: "yaer"} 
            = f.label :年, class: "year-label"
            = f.select :email,[['--', 1], ['1', 2]] ,{ class: "month"} 
            = f.label :月, class: "month-label" 
            = f.select :email,[['--', 1], ['1', 2]] ,{ class: "date" } 
            = f.label :日, class: "date-label"
          %p.info-text※ 本人情報は正しく入力してください。<br/>会員登録後、修正するにはお時間を頂く<br/>場合があります。
    .signup-form__identification
      商品送付先住所情報
    .signup-form__second
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|  
        .field
          = f.label :送付先氏名（全角）
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "send-name", placeholder: "例）山田", class: "lastname"
          = f.email_field :email, autofocus: true, autocomplete: "send-name", placeholder: "例）太郎", class: "firstname"
        .field
          = f.label :送付先氏名かな（全角）
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "nickname", placeholder: "例）やまだ", class: "lastname"
          = f.email_field :email, autofocus: true, autocomplete: "nickname", placeholder: "例）たろう", class: "firstname"
        .field
          = f.label :郵便番号
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "postalcode", placeholder: "例）123-4567", class: "text-form"
        .field
          = f.label :都道府県
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.select :email, [['大阪', 1], ['京都', 2]] , autofocus: true, autocomplete: "prefectures", class: "select-form"
        .field
          = f.label :市区町村
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "city", placeholder: "例）横浜市緑区", class: "text-form"
        .field
          = f.label :番地
          = f.label :必須, { class: 'form-require' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "address", placeholder: "例）青山1-1-1", class: "text-form"
        .field
          = f.label :建物名
          = f.label :任意, { class: 'form-ninni' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "building", placeholder: "例）柳ビル103", class: "text-form"
        .field
          = f.label :電話番号
          = f.label :任意, { class: 'form-ninni' }
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "phonenumber", placeholder: "例）09012345678", class: "text-form"
        .field
          %p.doui
            「登録する」のボタンを押すことにより、<br/>
            = link_to"利用規約" 
            に同意したものとみなします
          = f.submit "登録する", class: "signup-btn"
          .personal-information
            = link_to "#" do
              本人情報の登録について
              = icon('fas', 'chevron-right')
          %p.recaptcha_term
            This site is protected by reCAPTCHA and the Google
            =link_to "Privacy Policy"
            and
            =link_to "Terms ofService"
            apply.
        

      -# = render "devise/shared/links"

= render "layouts/footer"